<UserControl x:Class="ProBizERP.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Add Product" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Width="150" Margin="0,0,10,0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Name"/>
                <TextBox Width="100" Margin="0,0,10,0" Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Quantity"/>
                <TextBox Width="100" Margin="0,0,10,0" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Price"/>
                <Button Content="Add" Width="80" Click="AddProduct_Click"/>
            </StackPanel>
            <TextBlock Text="Products List" FontWeight="Bold" FontSize="16" Margin="0,10,0,5"/>
            <DataGrid ItemsSource="{Binding Products}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
